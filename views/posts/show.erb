
	<div class="post">
		<%=@post.title%>
		<p></p>
		<%=@post.body%>
		</div>
	

	<% if session[:current_user] %>
    <form action="/posts/<%=@post.id%>" method='post'>
      <input type="hidden" name='_method' value='delete'>
      <input type="submit" value='Delete Post'>
    </form>

    <a href="/posts/<%=@post.id%>/edit">Edit Post</a> 
  <% end %>